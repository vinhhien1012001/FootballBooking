<div class="container-fluid">
    <!-- /.row -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading"> Add stadium</div>
                <div class="panel-wrapper collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="form-body">
                                <h3 class="box-title">About Stadium</h3>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Stadium Name</label>
                                            <input type="text" id="firstName" class="form-control"
                                                placeholder="Sân thứ 1" name="name" required>
                                        </div>
                                    </div>
                                    {{!-- <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Category</label>
                                            <select class="form-control" data-placeholder="Choose a Category"
                                                tabindex="1" name="category" required>
                                                <option value="San5">Sân 5</option>
                                                <option value="San7">Sân 7</option>
                                            </select>
                                        </div>
                                    </div> --}}
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Address</label>
                                            <input type="text" id="lastName" class="form-control" placeholder="Address"
                                                name="address" required>
                                        </div>
                                    </div>
                                </div>
                                <h3 class="box-title m-t-40">Stadium Description</h3>
                                <div class="row">
                                    <div class="col-md-12 ">
                                        <div class="form-group">
                                            <textarea class="form-control" rows="4" name="detail" required></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Start booking time for the daytime</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="ti-time"></i>
                                                </div>
                                                <input type="time" class="form-control" id="exampleInputuname"
                                                    name="start_daytime" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>End booking time for the daytime</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="ti-time"></i>
                                                </div>
                                                <input type="time" class="form-control" id="exampleInputuname"
                                                    name="end_daytime" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Price for daytime</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="ti-money"></i>
                                                </div>
                                                <input type="number" id="lastName" class="form-control"
                                                    placeholder="Price" name="price_daytime" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Start booking time for the nighttime</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="ti-time"></i>
                                                </div>
                                                <input type="time" class="form-control" id="exampleInputuname"
                                                    name="start_nighttime" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>End booking time for nighttime</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="ti-time"></i>
                                                </div>
                                                <input type="time" class="form-control" id="exampleInputuname"
                                                    name="end_nighttime" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Price for nighttime</label>
                                            <div class="input-group">
                                                <div class="input-group-addon"><i class="ti-money"></i>
                                                </div>
                                                <input type="number" id="lastName" class="form-control"
                                                    placeholder="Price" name="price_nighttime" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--/row-->
                                <div class="row">

                                    <!--/span-->
                                    <div class="col-md-3">
                                        <h3 class="box-title m-t-20">Upload Image</h3>
                                        <div class="product-img" id="preview">
                                        </div>
                                        <div class="fileupload btn btn-info waves-effect waves-light">
                                            <span><i class="ion-upload m-r-5"></i>Upload Anonther
                                                Image</span>
                                            <input type="file" id="files" class="upload" accept="image/*" name="images"
                                                multiple required="">
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="form-actions m-t-40">
                                <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i>
                                    Add</button>
                                <button type="button" class="btn btn-default">Cancel</button>
                            </div>
                        </form>
                        <script>
                            const preview = (file) => {
                                const fr = new FileReader();
                                fr.onload = () => {
                                    const img = document.createElement("img");
                                    img.src = fr.result;  // String Base64 
                                    img.alt = file.name;
                                    document.querySelector('#preview').append(img);
                                };
                                fr.readAsDataURL(file);
                            };

                            document.querySelector("#files").addEventListener("change", (ev) => {
                                if (!ev.target.files) return; // Do nothing.
                                [...ev.target.files].forEach(preview);
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>